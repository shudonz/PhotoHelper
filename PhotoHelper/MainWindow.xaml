<Window x:Class="PhotoHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoHelper"
        mc:Ignorable="d"
        Title="Photo Metadata Helper" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Photo Metadata Helper" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Folder Selection -->
        <GroupBox Grid.Row="1" Header="1. Select Photo Folder" Padding="10" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FolderPathTextBox" Grid.Column="0" 
                         VerticalContentAlignment="Center" IsReadOnly="True" 
                         Padding="5" FontSize="14"/>
                <Button x:Name="BrowseFolderButton" Grid.Column="1" 
                        Content="Browse..." Width="100" Margin="10,0,0,0" 
                        Click="BrowseFolderButton_Click" Padding="5"/>
            </Grid>
        </GroupBox>

        <!-- Address Input -->
        <GroupBox Grid.Row="2" Header="2. Enter Location Address" Padding="10" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="AddressTextBox" Grid.Row="0"
                         VerticalContentAlignment="Center" 
                         Padding="5" FontSize="14"
                         TextWrapping="Wrap"
                         Text="e.g., 1600 Amphitheatre Parkway, Mountain View, CA"/>
                <TextBlock x:Name="CoordinatesTextBlock" Grid.Row="1" 
                           Margin="0,5,0,0" FontSize="12" Foreground="Gray"
                           Text="GPS coordinates will be displayed here after geocoding"/>
            </Grid>
        </GroupBox>

        <!-- Date Selection -->
        <GroupBox Grid.Row="3" Header="3. Select Photo Date" Padding="10" Margin="0,0,0,15">
            <DatePicker x:Name="PhotoDatePicker" 
                        FontSize="14"/>
        </GroupBox>

        <!-- Description and Keywords -->
        <GroupBox Grid.Row="4" Header="4. Additional Metadata (Optional)" Padding="10" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Description:" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" Grid.Row="1" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         Height="60" Padding="5" FontSize="14" Margin="0,0,0,10"/>
                
                <TextBlock Grid.Row="2" Text="Keywords (comma-separated):" Margin="0,0,0,5"/>
                <TextBox x:Name="KeywordsTextBox" Grid.Row="3" 
                         VerticalContentAlignment="Center" 
                         Padding="5" FontSize="14"
                         Text="vacation, travel, family"/>
            </Grid>
        </GroupBox>

        <!-- Progress and Status -->
        <GroupBox Grid.Row="6" Header="Status" Padding="10" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ProgressBar x:Name="ProgressBar" Grid.Row="0" Height="20" Margin="0,0,0,10"/>
                <ScrollViewer Grid.Row="1" Height="100" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="StatusTextBlock" TextWrapping="Wrap" FontSize="12"/>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <!-- Apply Button -->
        <Button Grid.Row="7" x:Name="ApplyButton" 
                Content="Apply Metadata to All Photos" 
                Height="40" FontSize="16" FontWeight="Bold"
                Click="ApplyButton_Click"/>
    </Grid>
</Window>
