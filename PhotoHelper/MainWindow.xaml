<Window x:Class="PhotoHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoHelper"
        mc:Ignorable="d"
        Title="Photo Metadata Helper" Height="900" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <!-- Step number style -->
        <Style x:Key="StepNumber" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <!-- Header text style -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with gradient -->
                <Border Grid.Row="0" Margin="0,0,0,20" Padding="20" CornerRadius="12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#6366F1" Offset="0"/>
                            <GradientStop Color="#8B5CF6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#6366F1" Opacity="0.4" BlurRadius="25" ShadowDepth="5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="📸 Photo Metadata Helper" 
                                   FontSize="28" FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Text="Add GPS coordinates, dates, and descriptions to your photos" 
                                   FontSize="13" 
                                   Foreground="#E0E7FF" 
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0"/>
                    </Grid>
                </Border>

                <!-- Folder Selection Card -->
                <GroupBox Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Style="{StaticResource StepNumber}">
                                <TextBlock Text="1" Foreground="White" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         FontWeight="Bold" FontSize="14"/>
                            </Border>
                            <TextBlock Text="Select Photo Folder" Style="{StaticResource CardHeader}"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="FolderPathTextBox" Grid.Column="0" 
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"/>
                        <Button x:Name="BrowseFolderButton" Grid.Column="1" 
                                Content="📁 Browse" 
                                Width="110" 
                                Margin="10,0,0,0" 
                                Click="BrowseFolderButton_Click"
                                Style="{StaticResource SecondaryButton}"/>
                    </Grid>
                </GroupBox>

                <!-- Address Input Card -->
                <GroupBox Grid.Row="2" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Style="{StaticResource StepNumber}">
                                <TextBlock Text="2" Foreground="White" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         FontWeight="Bold" FontSize="14"/>
                            </Border>
                            <TextBlock Text="Enter Location Address" Style="{StaticResource CardHeader}"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox x:Name="AddressTextBox" Grid.Row="0"
                                 Style="{StaticResource ModernTextBox}"
                                 TextWrapping="Wrap"
                                 Text="e.g., 1600 Amphitheatre Parkway, Mountain View, CA"/>
                        <Border Grid.Row="1" Margin="0,10,0,0" 
                                Background="#1E293B"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                Padding="10,8" CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📍" FontSize="13" Margin="0,0,6,0"/>
                                <TextBlock x:Name="CoordinatesTextBlock" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Text="GPS coordinates will be displayed here after geocoding"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Date Selection Card -->
                <GroupBox Grid.Row="3" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Style="{StaticResource StepNumber}">
                                <TextBlock Text="3" Foreground="White" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         FontWeight="Bold" FontSize="14"/>
                            </Border>
                            <TextBlock Text="Select Photo Date" Style="{StaticResource CardHeader}"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <DatePicker x:Name="PhotoDatePicker" 
                                Style="{StaticResource ModernDatePicker}"
                                HorizontalAlignment="Stretch"/>
                </GroupBox>

                <!-- Description and Keywords Card -->
                <GroupBox Grid.Row="4" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Border Style="{StaticResource StepNumber}">
                                <TextBlock Text="4" Foreground="White" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         FontWeight="Bold" FontSize="14"/>
                            </Border>
                            <TextBlock Text="Additional Metadata (Optional)" Style="{StaticResource CardHeader}"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Description:" Margin="0,0,0,6"
                                   FontSize="12" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox x:Name="DescriptionTextBox" Grid.Row="1" 
                                 Style="{StaticResource ModernTextBox}"
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="60" Margin="0,0,0,12"
                                 VerticalContentAlignment="Top"/>
                        
                        <TextBlock Grid.Row="2" Text="Keywords (comma-separated):" Margin="0,0,0,6"
                                   FontSize="12" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox x:Name="KeywordsTextBox" Grid.Row="3" 
                                 Style="{StaticResource ModernTextBox}"
                                 Text="vacation, travel, family"/>
                    </Grid>
                </GroupBox>

                <!-- Status Card -->
                <GroupBox Grid.Row="5" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
                    <GroupBox.Header>
                        <TextBlock Text="📊 Processing Status" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ProgressBar x:Name="ProgressBar" Grid.Row="0" 
                                     Style="{StaticResource ModernProgressBar}"
                                     Margin="0,0,0,12"/>
                        <Border Grid.Row="1" 
                                Background="#1E293B"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10">
                            <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="StatusTextBlock" 
                                           TextWrapping="Wrap" 
                                           FontSize="11" 
                                           FontFamily="Consolas"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Apply Button -->
                <Button Grid.Row="6" x:Name="ApplyButton" 
                        Content="✨ Apply Metadata to All Photos" 
                        Height="45" 
                        FontSize="15" 
                        Click="ApplyButton_Click"
                        Style="{StaticResource ModernButton}">
                    <Button.Effect>
                        <DropShadowEffect Color="#818CF8" Opacity="0.4" BlurRadius="20" ShadowDepth="3"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </ScrollViewer>
</Window>
